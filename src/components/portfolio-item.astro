---
import type { CollectionEntry } from "astro:content";
import Screenshots from "@/components/screenshots.astro";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";

interface Props {
	portfolioItem: CollectionEntry<"dev">;
}

const { portfolioItem } = Astro.props;

const { Content } = await portfolioItem.render();
---
<div class="grid grid-cols-1 sm:grid-cols-2 gap-8">
	<div class="flex flex-col items-center gap-4">
		<a
			class="text-5xl font-bold text-primary"
			href={portfolioItem.data.demoLink}
		>
			<h2 class="text-center">{portfolioItem.data.title}</h2>
		</a>
		<Screenshots
			title={portfolioItem.data.title}
			screenshotDesktop={portfolioItem.data.screenshotDesktop}
			screenshotMobile={portfolioItem.data.screenshotMobile}
		/>
		<p class="font-serif text-lg text-center">
			{portfolioItem.data.description}
		</p>
	</div>

	<div class="text-primary flex flex-col gap-4">
		<h2 class="text-2xl font-semibold text-black text-center">
			Technologies Used:
		</h2>
		<div class="font-serif sm:px-8 lg:px-16 prose-lg prose-a:text-primary prose-li:list-disc prose-li:my-0">
			<Content />
		</div>
		<div class="flex gap-4 justify-center">
			<a class={cn(buttonVariants({variant: 'outline'}))} href={portfolioItem.data.demoLink}>Live Demo</a>
			<a class={cn(buttonVariants({variant: 'outline'}))} href={portfolioItem.data.githubLink}>View Source</a>
		</div>
	</div>
</div>