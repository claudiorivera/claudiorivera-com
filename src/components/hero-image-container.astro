---
type Props = {
	image: string;
	title: string;
};

const { image, title } = Astro.props;
---
<div class="bg-primary/75 relative shadow-xl h-32 sm:h-screen">
	<img
		class="absolute top-0 right-0 bottom-0 left-0 -z-10 w-full h-full object-cover"
		src={image}
		title={title}
		alt=""
		width={600}
		height={400}
	/>

	<div class="absolute top-0 h-full w-full flex justify-center px-6">
		<slot />
	</div>
</div>